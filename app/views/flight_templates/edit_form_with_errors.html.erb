<!-- Validation failure messages -->
<% if @flight.errors.any? %>
  <% @flight.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit flight #<%= @flight.id %>
</h1>

<hr>

<!-- Form flight start -->
<form action="/update_flight/<%= @flight.id %>" method="post">
<!-- Form flight end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @flight.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for departs_date start -->
  <div class="form-group">
    <label for="departs_date">
      Departs date
    </label>

    <!-- Input for departs_date start -->
    <input type="text" id="departs_date" name="departs_date" class="form-control" value="<%= @flight.departs_date %>">
    <!-- Input for departs_date end -->
  </div>
  <!-- Label and input for departs_date end -->

  <!-- Label and input for departs_time start -->
  <div class="form-group">
    <label for="departs_time">
      Departs time
    </label>

    <!-- Input for departs_time start -->
    <input type="text" id="departs_time" name="departs_time" class="form-control" value="<%= @flight.departs_time %>">
    <!-- Input for departs_time end -->
  </div>
  <!-- Label and input for departs_time end -->

  <!-- Label and input for user_id start -->
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
