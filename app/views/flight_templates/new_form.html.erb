<h1>
  Add a new flight
</h1>


<hr>

<!-- Form flight start -->
<form action="/create_flight" method="post">
<!-- Form flight end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for departs_date start -->
  <div class="form-group">
    <label for="departs_date">
      Departs date
    </label>

    <!-- Input for departs_date start -->
    <input type="text" id="departs_date" name="departs_date" class="form-control">
    <!-- Input for departs_date end -->
  </div>
  <!-- Label and input for departs_date end -->

  <!-- Label and input for departs_time start -->
  <div class="form-group">
    <label for="departs_time">
      Departs time
    </label>

    <!-- Input for departs_time start -->
    <input type="text" id="departs_time" name="departs_time" class="form-control">
    <!-- Input for departs_time end -->
  </div>
  <!-- Label and input for departs_time end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
